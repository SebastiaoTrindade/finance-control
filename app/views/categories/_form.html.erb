<%= form_with(model: category, local: true) do |form| %>
  <% if category.errors[:name].present? %>
    <div class="alert alert-danger">
      Nome é obrigatório. Por favor, preencha o campo.
    </div>
  <% end %>


  <div class="form-group">
    <%= form.label :name, 'Nome', class: 'form-label'%>
    <%= form.text_field :name, class: 'form-control', placeholder: 'Digite o nome da categoria' %>
  </div>

  <div class="form-group">
    <%= form.label :category_type, 'Tipo de Categoria', class: 'form-label' %>
    <%= form.select :category_type, options_for_select(['Despesa', 'Receita'], category.category_type), {}, class: 'form-select' %>
  </div>

  <div class="form-group">
    <%= link_to 'Voltar', categories_path, class: 'btn btn-secondary' %>
    <%= form.submit 'Salvar Categoria', class: 'btn btn-success' %>
  </div>
<% end %>
