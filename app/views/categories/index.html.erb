<% if notice.present? %>
  <p id="notice" class="alert alert-info"><%= notice %></p>
<% end %>

<div class="container mt-4">
  <h1 class="mb-4">Categorias</h1>

  <table class="table table-striped table-hover">
    <thead class="table-dark">
      <tr>
        <th>Nome</th>
        <th>Tipo de Categoria</th>
        <th colspan="3" class="text-center">Ações</th>
      </tr>
    </thead>

    <tbody>
      <% @categories.each do |category| %>
        <tr>
          <td><%= category.name %></td>
          <td><%= category.category_type %></td>
          <td><%= link_to 'Mostrar', category, class: 'btn btn-primary btn-sm' %></td>
          <td><%= link_to 'Editar', edit_category_path(category), class: 'btn btn-warning btn-sm' %></td>
          <td><%= link_to 'Excluir', category, method: :delete, data: { confirm: 'Tem certeza que deseja excluir?' }, class: 'btn btn-danger btn-sm' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="text-end">
    <%= link_to 'Nova Categoria', new_category_path, class: 'btn btn-success' %>
  </div>
</div>
